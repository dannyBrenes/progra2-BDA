<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Catalogo</title>
    <style>
        .container {
            max-width: 960px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="shadow-lg pb-3 mb-5 bg-body rounded">
            <h1 class="p-5">Catalogo</h4>

                <form action="/crearProducto" method="POST" class="p-5">
                    <div class="col-md-6">
                        <label for="id">ID Producto</label>
                        <input type="number" name="id" id="id" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" id="nombre" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="marca">Marca</label>
                        <select class="form-select" aria-label="Default select example" name="marca">
                            <option selected>Escoja la marca</option>
                            <% marcas.forEach((marca)=> { %>
                                <option>
                                    <%= marca.nombre%>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="precio">Precio</label>
                        <input type="number" name="precio" id="precio" class="form-control">
                    </div>
                    <br>
                    <button type="submit" class="w-100 btn btn-primary"><i class="bi bi-save"></i> Agregar</button>
                </form>

                <h1 class="p-5">Buscar Producto</h4>
                    <form action="/buscarProducto" method="POST" class="p-5">
                        <div class="col-md-6">
                            <label for="id">ID Producto</label>
                            <input type="number" name="id" id="id" class="form-control">
                        </div>
                        <br>
                        <button type="submit" class="w-100 btn btn-primary"><i class="bi bi-search"></i> Buscar</button>
                    </form>

                    <h1 class="p-5">Eliminar Producto</h4>
                        <form method="post" action="/eliminarProducto" class="p-5">
                            <div class="col-md-6">
                                <label for="id">ID Producto</label>
                                <input type="number" name="id" id="id" class="form-control">
                            </div>
                            <br>
                            <button type="submit" class="w-100 btn btn-primary"><i class="bi bi-archive"></i>
                                Eliminar</button>
                        </form>

                        <h1 class="p-5">Editar los productos</h4>
                            <form action="/editarProducto" method="POST" class="p-5">
                                <div class="col-md-6">
                                    <label for="id">ID</label>
                                    <input type="number" name="id" id="id" class="form-control">
                                </div>
                                <div class="col-md-6">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" name="nombre" id="nombre" class="form-control">
                                </div>
                                <div class="col-md-6">
                                    <label for="marca">Marca</label>
                                    <select class="form-select" aria-label="Default select example" name="marca">
                                        <option selected>Escoja la marca</option>
                                        <% marcas.forEach((marca)=> { %>
                                            <option>
                                                <%= marca.nombre%>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="precio">Precio</label>
                                    <input type="number" name="precio" id="precio" class="form-control">
                                </div>
                                <br>
                                <button type="submit" class="w-100 btn btn-primary"><i class="bi bi-pencil"></i>
                                    Editar</button>
                            </form>

                            <table class="table m-lg-5" id="tablaCatalogo">
                                <thead>
                                    <tr>
                                        <th scope="col">ID Producto</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Marca</th>
                                        <th scope="col">Precio</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% objCatalogo.forEach((producto)=> { %>
                                        <tr>
                                            <td>
                                                <%= producto.id%>
                                            </td>
                                            <td>
                                                <%= producto.nombre%>
                                            </td>
                                            <td>
                                                <%= producto.marca%>
                                            </td>
                                            <td>
                                                <%= producto.precio%>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
        </div>
    </div>

</body>

</html>